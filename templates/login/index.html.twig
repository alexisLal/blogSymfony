{% extends '/blog.html.twig' %}

{% block title %}Se connecter
{% endblock %}

{% block main %}
	<style>
		.form-signin {
			max-width: 330px;
			padding: 15px;
		}

		.form-signin .form-floating:focus-within {
			z-index: 2;
		}

		.form-signin input[type="email"] {
			margin-bottom: -1px;
			border-bottom-right-radius: 0;
			border-bottom-left-radius: 0;
		}

		.form-signin input[type="password"] {
			margin-bottom: 10px;
			border-top-left-radius: 0;
			border-top-right-radius: 0;
		}
	</style>
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
	<main class="text-center form-signin w-100 m-auto">
		<form action="{{ path('app_login') }}" method="post">
			<img class="mb-4" src="{{ asset('images/lettreA.png') }}" alt="" width="90" height="90">
			<h1 class="h3 mb-3 fw-normal">Connectez-vous</h1>
			<div class="form-floating">
				<input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}">
				<label for="username">Username:</label>
			</div>
			<div class="form-floating">
				<input type="password" class="form-control" id="password" name="_password">
				<label for="password">Password:</label>
			</div>

			{# If you want to control the URL the user is redirected to on success#}
			<input type="hidden" name="_target_path" value="/">

			<button class="w-100 btn btn-primary" type="submit">login</button>
		</main>
	</form>
{% endblock %}
